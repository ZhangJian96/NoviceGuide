<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tv_btn_1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_text_view"
            android:gravity="center"
            android:text="@string/zj_001"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_btn_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_btn_2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_text_view"
            android:gravity="center"
            android:text="@string/zj_002"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_btn_1"
            app:layout_constraintRight_toLeftOf="@+id/tv_btn_3"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_btn_3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_text_view"
            android:gravity="center"
            android:text="@string/zj_003"
            android:textColor="#ffffff"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_btn_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>